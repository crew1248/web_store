@model x_nova_template.Models.Portfolio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Edit","Slider", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактирование</legend>
        <div class="editor-label">
             Фото
        </div>
        <div class="editor-field">
           <img width="150" height="150" src="@Url.Action("GetSliderImage", "Slider", new { id = Model.ID,width=300,height=300 })" />
        </div>
        <div class="editor-label">
             Название
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
             Описание
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
             Цена
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(model => model.Price)
          
        </div>
 <br />
        
       
        <div class="editor-field">
          Загрузить файл
          <p></p>
<div class="file_field">
    @Html.Kendo().Upload().Name("file")
</div>


 </div>
 
        <br />
        <p>
            <button class="k-button k-primary" type="submit">Сохранить</button>&nbsp;
        </p>
    </fieldset>
}
 
       
<div>
    <a class="k-button" type="button" href="@Url.Action("Index", "Slider")">Отмена</a>

</div>

