@model x_nova_template.Models.LocalPasswordModel

<h3>Смена пароля</h3>
 <style>
     form {
width: 500px;
overflow: hidden;
padding-top: 2px;
}
       form div {
           
float: left;
width: 100%;
margin-bottom: 5px;
}
form label {
float: left;
min-width:150px;
text-align: right;
position: relative;
top: 2px;
margin-right: 5px;
}

    </style>
@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   
    <fieldset>
        <legend>Форма изменения пароля</legend>
        
                <div>
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
                    </div>
           
                <div>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
                </div>
            
                <div>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
        <button type="submit" class="action button label">Сменить</button>
    </fieldset>
}
